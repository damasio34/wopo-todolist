# EditorConfig Damasio34 :D

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[**.{js,html,css}]
charset = utf-8

# 4 space indentation for js
[app/js/*.js]
indent_style = space
indent_size = 4

# 4 space indentation for html
[app/views**.html]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.{js,html,css}]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[package.json]
indent_style = space
indent_size = 4